@page "/"

<div class="card vh-100">
    <div class="card-body d-flex flex-column flex-fill overflow-hidden">
        <h5 class="card-title flex-shrink-0 d-flex align-items-center flex-wrap">
            <span>Markdown to Html</span>
            <button type="button" class="ml-auto mr-1 btn btn-danger btn-sm" @onclick="OnClear" disabled="@actionsDisabled">Clear</button>
            <button type="button" class="btn btn-primary btn-sm" @onclick="OnFormat" disabled="@actionsDisabled">Format</button>
        </h5>
        <div class="flex-fill d-flex align-items-stretch overflow-hidden">
            <textarea class="form-control w-100 mr-1" @bind="markdown" @oninput="OnInput"></textarea>
            <div class="form-control h-auto w-100 ml-1 overflow-auto rounded">
                @html
            </div>
        </div>
    </div>
</div>