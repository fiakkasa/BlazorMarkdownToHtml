<div class="card vh-100">
    <div class="card-body d-flex flex-column flex-fill overflow-hidden">
        <h5 class="card-title flex-shrink-0 d-flex align-items-center justify-content-between flex-wrap">
            <span>Markdown to Html</span>
            <span class="d-flex align-items-center flex-wrap">
                <button type="button" class="mr-1 btn btn-danger btn-sm" @onclick="OnClear" disabled="@actionsDisabled">Clear</button>
                <button type="button" class="btn btn-primary btn-sm" @onclick="OnFormat" disabled="@actionsDisabled">Format</button>
            </span>
        </h5>
        <div class="flex-fill d-flex flex-column flex-md-row align-items-stretch overflow-hidden">
            <textarea class="form-control h-100 w-100 mb-1 mb-md-0 mr-md-1" @bind="markdown" @oninput="OnInput"></textarea>
            <div class="form-control h-100 w-100 ml-md-1 overflow-auto rounded">
                @html
            </div>
        </div>
    </div>
</div>